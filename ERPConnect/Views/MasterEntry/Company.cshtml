@model List<Company>;


<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse !important;
        border: 1px solid #ccc;
    }

    .editable-highlight {
        background-color: #f3f3f3;
    }

    .custom-table button {
        border: none;
        background: transparent;
    }

    .custom-table th, .custom-table td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
    }

    .bold-label {
        font-weight: bold;
    }

</style>
<script>

    $(document).ready(function () {
        const $companyGroupTable = $('#company-table');

        const fieldNames = [
            "Id", "Name", "Address1", "Address2", "KeyPerson", "InvolvingIndustry", "PhoneNo", "FaxNo",
            "Email", "PFNo", "ESINo", "HeadOffice", "PanNo", "RegNo", "KeyPersonAddress", "KeyPersonPhNo",
            "KeyPersonDOB", "KeyDesignation", "RegistrationDate"
        ];

        $companyGroupTable.DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "columnDefs": [
                { "orderable": false, "targets": [2] }
            ]
        });

        generateDynamicForm(4, 10);

        $(".edit-button,.view-button").click(function () {
            var companyId = $(this).data("id");

            var isViewButton = $(this).hasClass("view-button");

            var url = '/GetCompanyById/' + companyId;
            $.ajax({
                url: url,
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.success) {

                        var companyData = response.data;

                        for (var key in companyData) {
                            if (companyData.hasOwnProperty(key)) {
                                var value = companyData[key];
                                var inputId = null;

                                for (var i = 0; i < fieldNames.length; i++) {
                                    var fieldName = fieldNames[i];
                                    if (fieldName.toLowerCase() === key.toLowerCase()) {
                                        inputId = "Company" + fieldName;
                                        break;
                                    }
                                }
                                if (inputId) {
                                    $("#" + inputId).val(value);
                                }
                            }
                        }

                        $("#companyModal").modal("show");

                        $('.datepicker').datepicker({
                            dateFormat: 'yy-mm-dd'
                        });

                    } else {
                        alert('Operation failed: ' + response.msg);
                    }
                },
                error: function (error) {
                    alert('An error occurred during request.');
                }
            });

            if (isViewButton) {
                $("#companyModal").attr("data-mode", "View");

                $("#companyModalLabel").text("Company Details");
                $("#companyModal input").prop("readonly", isViewButton);
                $("#saveEditButton").toggle(!isViewButton);
            }
            else {
                $("#companyModal").attr("data-mode", "Edit");

                $("#companyModalLabel").text("Edit Company Details");
                $("#companyModal input").prop("readonly", false);
                $("#saveEditButton").toggle(true);
            }
        });

        $("#closeEditModal").on("click", function () {
            $("#companyModal").modal("hide");
        });

        $("#saveEditButton").click(function () {
            debugger;
            var dataMode = $("#companyModal").attr("data-mode");
            if (dataMode === "Edit") {
                var dataToSend = {};

                for (var i = 0; i < fieldNames.length; i++) {
                    var fieldName = fieldNames[i];
                    var inputId = "Company" + fieldName;
                    var inputValue = $("#" + inputId).val()

                    dataToSend[fieldName] = inputValue;
                }

                $.ajax({
                    url: '/MasterEntry/UpdateCompanyDetails',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(dataToSend),
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Operation failed: ' + response.msg);
                        }
                    },
                    error: function (error) {
                        alert('An error occurred during the request.');
                    }
                });
            }

            else if (dataMode === "Add") {
                var newData = {};

                for (var i = 0; i < fieldNames.length; i++) {
                    var fieldName = fieldNames[i];
                    var inputId = "Company" + fieldName;
                    var inputValue = $("#" + inputId).val();

                    newData[fieldName] = inputValue;
                }

                $.ajax({
                    url: '/MasterEntry/AddCompany',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(newData),
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Operation failed: ' + response.msg);
                        }
                    },
                    error: function (error) {
                        alert('An error occurred during the request.');
                    }
                });
            }
        });

        $(".delete-button").click(function () {
            var companyId = $(this).data("id");

            if (confirm("Are you sure you want to delete this company?")) {

                $.ajax({
                    url: '/DeleteCompany/' + companyId,
                    type: 'DELETE',
                    success: function (response) {
                        if (response.success) {

                            location.reload();
                        } else {
                            alert('Delete operation failed: ' + response.msg);
                        }
                    },
                    error: function (error) {
                        alert('An error occurred during the delete request.');
                    }
                });
            }
        });

        $("#addCompanyButton").click(function () {

            $("#companyModalLabel").text("Add New Company");
            $("#companyModal input[type='text']").val("");
            $("#companyModal").modal("show");
            $("#companyModal").attr("data-mode", "add");

        });
    });

    function generateDynamicForm(columns, rows) {
        const fieldNames = [
            "Id", "Name", "Address1", "Address2", "KeyPerson", "InvolvingIndustry", "PhoneNo", "FaxNo",
            "Email", "PFNo", "ESINo", "HeadOffice", "PanNo", "RegNo", "KeyPersonAddress", "KeyPersonPhNo",
            "KeyPersonDOB", "KeyDesignation", "RegistrationDate"
        ];

        let dynamicFormFields = '';

        for (let row = 0; row < rows; row++) {
            dynamicFormFields += '<div class="row mb-3">';
            for (let col = 0; col < columns; col++) {
                const fieldName = fieldNames[row * columns + col];
                if (!fieldName) break;

                const datepicker = fieldName === 'RegistrationDate' || fieldName === 'KeyPersonDOB' ? 'datepicker' : '';

                dynamicFormFields += `
                                                        <div class="col-md-${12 / columns}">
                                                            <div class="form-group">
                                                                <label for="Company${fieldName}" class="bold-label">${fieldName}</label>
                                                                        <input type="text" id="Company${fieldName}" class="form-control ${datepicker}" style="cursor:auto;">
                                                            </div>
                                                        </div>
                                                    `;
            }
            dynamicFormFields += '</div>';
        }

        $('#dynamicFormFields').html(dynamicFormFields);
    }


</script>


<div class="container">
    <div class="row" style="margin: 10px; padding: 10px;">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header" style="text-align:center;">
                    Company Details
                </div>
                <div class="card-body">
                    <button onclick="addNewCompany()" id="addCompanyButton" class="btn btn-primary mb-3" data-toggle="modal" data-target="#addModal">
                        Add New Company
                    </button>
                    <table id="company-table" class="custom-table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Company Name</th>
                                <th>Company Address</th>
                                <th>Email</th>
                                <th>P.F. No.</th>
                                <th>E.S.I. No.</th>
                                <th>Registration Date</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var company in Model)
                            {
                                <tr class="company-row">
                                    <td class="company-id" data-group-id="@company.Id">@company.Id</td>
                                    <td class="company-name">@company.Name</td>
                                    <td class="company-address1">@company.Address1</td>
                                    <td class="company-email">@company.Email</td>
                                    <td class="company-pfno">@company.Pfno</td>
                                    <td class="company-esino">@company.Esino</td>
                                    <td class="company-regdate">@company.RegistrationDate</td>
                                    <td>
                                        <button class="view-button" data-id="@company.Id">
                                            <i class="fas fa-eye" title="View"></i>
                                        </button>
                                        <button class="edit-button" data-id="@company.Id" data-toggle="modal" data-target="#companyModal">
                                            <i class="fas fa-pencil-alt" title="Edit"></i>
                                        </button>
                                        <button class="delete-button" data-id="@company.Id">
                                            <i class="fas fa-trash" title="Delete"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="companyModal" tabindex="-1" role="dialog" aria-labelledby="companyModalLabel" aria-hidden="true" data-mode="">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="companyModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="closeEditModal">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <!-- Dynamic form fields will be inserted here -->
                    <div id="dynamicFormFields" class="row"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="saveEditButton">Save</button>
                </div>
            </div>
        </div>
    </div>




</div>