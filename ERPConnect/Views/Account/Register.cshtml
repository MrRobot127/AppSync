@model RegisterViewModel

@{
    ViewBag.Title = "Add Users";
}

<script>
    $(document).ready(function () {
        $("#phoneNumber").on("keypress", function (e) {
            // Allow only digits (0-9) and keys from the numeric keypad (96-105)
            if (!((e.which >= 48 && e.which <= 57) || (e.which >= 96 && e.which <= 105))) {
                e.preventDefault();
            }
        });

        // Add an input event handler to restrict the length to 10 characters
        $("#phoneNumber").on("input", function () {
            var phoneNumber = $(this).val();
            if (phoneNumber.length > 10) {
                $(this).val(phoneNumber.slice(0, 10));
            }
        });
    });
</script>

<div class="row">
    <div class="col-md-6 mx-auto">
        <h2>Add Users</h2>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" autocomplete="off" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" autocomplete="off" type="text" id="phoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>