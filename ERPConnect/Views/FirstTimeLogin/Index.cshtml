@model FirstTimeLoginViewModel
@{
    ViewData["Title"] = "Change Password";
}

@section scripts {
    <script>
        $(document).ready(function () {
            $("#sendOTPButton").click(function () {
                $("#loading").show();
                disableAllInputs();
            });

            function disableAllInputs() {
                $(":input").attr("readonly", true);
                $(":input").css("cursor", "not-allowed");

            }
        });
    </script>
}

<h1>@ViewData["Title"]</h1>
@if (User?.Identity?.IsAuthenticated == true && User.HasClaim("FirstTimeLogin", "True"))
{
    <div class="alert alert-info">
        Welcome to your first login. Please complete the following steps to change your password:
    </div>

    @if (ViewBag.UserExternalEmail == "")
    {
        @if (ViewBag.TempOtpSentStatus)
        {
            <div class="alert alert-success">
                OTP sent to <strong>@ViewBag.TempExternalEmail</strong>. Please check your email and enter the OTP below:
            </div>
            <form asp-action="VerifyOTP" asp-controller="FirstTimeLogin" method="post">
                <div class="form-group">
                    <label asp-for="OTP">Enter OTP</label>
                    <input asp-for="OTP" class="form-control" autocomplete="off" />
                    <span asp-validation-for="OTP" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit OTP</button>
            </form>
        }
        else
        {
            <form asp-action="RegisterEmail" asp-controller="FirstTimeLogin" method="post">
                <div class="form-group">
                    <label asp-for="ExternalEmail">Email</label>
                    <input asp-for="ExternalEmail" class="form-control" autocomplete="off" />
                    <span asp-validation-for="ExternalEmail" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" id="sendOTPButton">Send OTP</button>
                <div id="loading" class="text-center" style="display: none;">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Sending OTP...</span>
                    </div>
                    <p>Sending OTP...</p>
                </div>
            </form>
        }
    }
    else
    {
        <p>Email Verified: <strong>@ViewBag.UserExternalEmail</strong></p>

        <form asp-action="ChangePassword" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="OldPassword">Old Password</label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword">New Password</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Change Password</button>
        </form>
    }
}
